{
    "name"         : "jbzoo/ci-report-converter",
    "type"         : "library",
    "license"      : "MIT",
    "description"  : "The tool converts different error reporting standards for deep integration with popular CI systems (TeamCity, IntelliJ IDEA, GitHub Actions, etc)",
    "keywords"     : [
        "checkstyle",
        "codestyle",
        "phpstorm",
        "teamcity",
        "github",
        "github actions",
        "actions",
        "junit",
        "pmd",
        "phpmd",
        "phpmnd",
        "psalm",
        "phpstan",
        "phan",
        "phpcs",
        "phpmd",
        "phploc",
        "teamcity-inspections",
        "inspections",
        "tests",
        "ci",
        "continuous integration",
        "IntelliJ IDEA"
    ],

    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"      : {
        "php"             : ">=7.2",
        "ext-dom"         : "*",
        "ext-simplexml"   : "*",
        "ext-hash"        : "*",

        "jbzoo/data"      : "^4.3.3",
        "jbzoo/utils"     : "^4.5.4",
        "jbzoo/cli"       : "^1.0.0",
        "jbzoo/markdown"  : "^1.1.1",

        "symfony/console" : "^4.4|^5.0"
    },

    "require-dev"  : {
        "jbzoo/toolbox-dev"         : "^3.2.0",
        "jbzoo/mermaid-php"         : "^2.3.2",
        "jbzoo/codestyle"           : "^3.2.3",
        "guzzlehttp/psr7"           : "^1.8.4|^2.2.1",
        "roave/security-advisories" : "dev-master"
    },

    "replace"      : {
        "jbzoo/toolbox-ci" : "*"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\CiReportConverter\\" : "src"
        }
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "bin"          : ["ci-report-converter"],

    "config"       : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {
            "composer/package-versions-deprecated" : true
        }
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "2.x-dev"
        }
    }
}
